#!/usr/bin/env node

const https = require('https')

const LAT = '32.989236'
const LON = '-96.884466'

const APIKEY = process.env.DARKSKY_API_KEY

const url = `https://api.darksky.net/forecast/${APIKEY}/${LAT},${LON}`

return https.get(url, function(response) {
    var body = ''

    response.on('data', function(d) {
        body += d
    });

    response.on('end', function() {
        var data = JSON.parse(body)
        console.log('Currently:', data.currently.summary, 'and', Math.round(data.currently.temperature), 'Â°')
        console.log('Today:', data.hourly.summary)
        console.log('This Week:', data.daily.summary)
    })
})
